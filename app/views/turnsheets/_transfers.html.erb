      <td>Other club</td>
      <td>
        <%= form.label :transfer2_club, style: "display: none" %>
        <%= form.text_field :transfer2_club, disabled: true %>
    </tr>
    <tr scope="row">
      <td>Type</td>
      <td>
        <%= form.label :transfer3_type, style: "display: none" %>
        <%= form.select :transfer3_type, options_for_select('Unmanaged Bid' => 'unmanaged_bid', 'Circuit Sale' => 'circuit', 'Bid for Listed Player' => 'listed_bid', 'Deal agreed with another club' => 'deal'), {prompt: "Select a transfer type?"}, { id: "transfer3_type" } %>
      </td>
      <td>Player ID</td>
      <td>
        <%= form.label :transfer3_player_id, style: "display: none" %>
        <%= form.text_field :transfer3_player_id, disabled: true, id: "transfer3_player_id" %>
      </td>
      <td>Amount</td>
      <td>
        <%= form.label :transfer3_amount, style: "display: none" %>
