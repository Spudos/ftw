      </td>
      <td>Amount</td>
      <td>
        <%= form.label :transfer1_amount, style: "display: none" %>
        <%= form.text_field :transfer1_amount, disabled: true %>
      </td>
      <td>Other club</td>
      <td>
        <%= form.label :transfer1_club, style: "display: none" %>
        <%= form.text_field :transfer1_club, disabled: true %>
    </tr>
    <tr scope="row">
      <td>Type</td>
      <td>
        <%= form.label :transfer2_type, style: "display: none" %>
        <%= form.select :transfer2_type, options_for_select('Unmanaged Bid' => 'unmanaged_bid', 'Circuit Sale' => 'circuit', 'Bid for Listed Player' => 'listed_bid', 'Deal agreed with another club' => 'deal'), prompt: "Select a transfer type?" %>
      </td>
      <td>Player ID</td>
