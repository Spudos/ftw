<h3 style="text-align: center">Club Upgrades</h3>

<div class="col-md-12 align-top d-flex align-items-center justify-content-center">
  <%= image_tag "club.jpg", alt: "club stadium", class: "club-stadium m-2" %> 
</div>

<h5 style="text-align: center"><%= @club.ground_name %></h5>
  <div id="stand_navigation" class="col-md-12 align-top d-flex align-items-center justify-content-center">
    <button id="n" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
      <span><%= @club.stand_n_name %></span>
      <span>Capacity: <%= @club.stand_n_capacity %></span>
      <span>Condition: <%= @club.stand_n_condition %></span>
    </button>
    <button id="s" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
      <span><%= @club.stand_s_name %></span>
      <span>Capacity: <%= @club.stand_s_capacity %></span>
      <span>Condition: <%= @club.stand_s_condition %></span>
    </button>
    <button id="e" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
      <span><%= @club.stand_e_name %></span>
      <span>Capacity: <%= @club.stand_e_capacity %></span>
      <span>Condition: <%= @club.stand_e_condition %></span>
    </button>
    <button id="w" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
      <span><%= @club.stand_w_name %></span>
      <span>Capacity: <%= @club.stand_w_capacity %></span>
      <span>Condition: <%= @club.stand_w_condition %></span>
    </button>
  </div>

  <div id="stand_capacity" class="col-md-12 align-top d-flex align-items-center justify-content-center">  
    <button id="2000" class="btn btn-sm btn-outline-primary">add 2000 seats</button>
    <button id="4000" class="btn btn-sm btn-outline-primary">add 4000 seats</button>
    <button id="6000" class="btn btn-sm btn-outline-primary">add 6000 seats</button>
    <button id="8000" class="btn btn-sm btn-outline-primary">add 8000 seats</button>
  </div>

  <div id="stand_condition" class="col-md-12 align-top d-flex align-items-center justify-content-center">
    <button id="condition" class="btn btn-sm btn-outline-primary">Upgrade stand condition</button>
  </div>
</div>

<hr>
<h5 style="text-align: center">Coaches</h5>
<div id="coach_selection" class="col-md-12 align-top d-flex align-items-center justify-content-center">
  <button id="staff_gkp" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
    <span>Goalkeeping</span>
    <span>Current rating:<%= @club.staff_gkp %></span>
  </button>
  <button id="staff_dfc" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
    <span>Defense</span>
    <span>Current rating:<%= @club.staff_dfc %></span>
  </button>
  <button id="staff_mid" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
    <span>Midfield</span>
    <span>Current rating:<%= @club.staff_mid %></span>
  </button>
  <button id="staff_att" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
    <span>Attack</span>
    <span>Current rating:<%= @club.staff_att %></span>
  </button>
  <button id="staff_fitness" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
    <span>Fitness</span>
    <span>Current rating:<%= @club.staff_fitness %></span>
  </button>
  <button id="staff_scouts" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
    <span>Scouts</span>
    <span>Current rating:<%= @club.staff_scouts %></span>
  </button>
</div>

<hr>
<h5 style="text-align: center">Property</h5>
<div id="property_selection" class="col-md-12 align-top d-flex align-items-center justify-content-center">
  <button id="pitch" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
    <span>Pitch</span>
    <span>Current rating:<%= @club.pitch %></span>
  </button>
  <button id="hospitality" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
    <span>Hospitality</span>
    <span>Current rating:<%= @club.hospitality %></span>
  </button>
  <button id="facilities" class="btn btn-sm btn-outline-primary d-flex flex-column align-items-center">
    <span>Facilities</span>
    <span>Current rating:<%= @club.facilities %></span>
  </button>
</div>
