<div class="col-md-12 align-top d-flex align-items-center justify-content-center">
  <h3>Turnsheet for <%= @club.name %></h3> 
</div>

<div class="col-md-12 align-top d-flex align-items-center justify-content-center">
  <%= image_tag "badge.png", alt: "club badge", class: "club-badge m-2" %> 
</div>

<div class="d-flex justify-content-center">
  <div class="col-4 align-items-center">   
    <div class="row mb-3 header-inputs">
      <%= form.label :Id %>
      <%= form.text_field :club_id, value: @club.id, readonly: true%>
    </div>

    <div class="row mb-3 header-inputs">
      <%= form.label :manager %>
      <%= form.text_field :manager, value: User.find_by(club: @club.id)&.fname + " " + User.find_by(club: @club.id)&.lname, readonly: true %>
    </div>

    <div class="row mb-3 header-inputs">
      <%= form.label :email %>
      <%= form.text_field :email, value: User.find_by(club: @club.id)&.email, readonly: true %>
    </div>

    <div class="row mb-3 header-inputs">
      <%= form.label :week %>
      <%= form.number_field :week, value: @next_turn_week %>
    </div>
  </div>
</div>