<h3 class="text-center">Fixtures</h3>
<table class="table table-hover align-middle">
  <thead>
    <tr style="border: 2px <%= @primary %> solid;">
      <th scope="col">Match ID</th>
      <th scope="col">Competition</th>
      <th scope="col">Week</th>
      <th scope="col">Home Team</th>
      <th scope="col">Home Goals</th>
      <th scope="col">Away Team</th>
      <th scope="col">Away Goals</th>
    </tr>
  </thead>
  <tbody>
    <% @club_fixtures.sort_by(&:week_number).each do |match| %>
      <tr style="border-bottom: 2px <%= @secondary %> solid;" scope="row">
        <td><%= match.id %></td>
        <td><%= match.comp %></td>
        <td><%= match.week_number %></td>
        <td><%= Club.find_by(id: match.home)&.name %></td>
        <td><%= Match.find_by(match_id: match.id)&.home_goals %></td>
        <td><%= Club.find_by(id: match.away)&.name %></td>
        <td><%= Match.find_by(match_id: match.id)&.away_goals %></td>
      </tr>
    <% end %>
  </tbody>
</table>
