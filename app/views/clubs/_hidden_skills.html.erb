<h3>Hidden Skills</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Nationality</th>
      <th scope="col">Position</th>
      <th scope="col">Cons</th>
    </tr>
  </thead>
  <tbody>
    <% Player.where(club: params[:id]).each do |player| %>
      <tr scope="row">
        <td><%= player.name %></td>
        <td><%= player.age %></td>
        <td><%= player.nationality %></td>
        <td><%= player.pos %></td>
        <td><%= player.cons %></td>
      </tr>
    <% end %>
  </tbody>
</table>
