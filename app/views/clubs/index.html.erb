<%= link_to "Click here a create a new club", new_club_path, class: "btn btn-sm btn-primary" %>

<div id="clubs">
  <table class="table table-hover">
    <tbody>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Abbreviation</th>
        <th scope="col">League</th>
        <th scope="col">Action</th>
      </tr>
      <tr scope="row">
        <% @clubs.each do |club| %>
            <%= render club %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>


