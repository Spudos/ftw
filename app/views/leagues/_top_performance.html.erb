<h4>Top 10 Players by Average Performance</h4>
<table class="table table-hover">
  <tr>
    <th scope="col">id</th>
    <th scope="col">Name</th>
    <th scope="col">Club</th>
    <th scope="col">Position</th>
    <th scope="col">Performance</th>
  </tr>
  <% @top_performance.each do |player| %>
    <tr scope="row">
      <td><%= player[:id] %></td>
      <td><%= player[:name] %></td>
      <td><%= Club.find_by(abbreviation: player[:club])&.name %></td>
      <td><%= player[:position] %></td>
      <td><%= player[:average_match_performance] %></td>
    </tr>
  <% end %>
</table>