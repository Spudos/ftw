<h3 class="text-center">WCC Fixture List</h3>
<table class="table table-hover">
  <tr>
    <th scope="col">Round</th>
    <th scope="col">Week Number</th>
  </tr>
  <tr scope="row">
    <td>Round 1 (240)</td>
    <td>4</td>
  </tr>
  <tr scope="row">
    <td>Round 2 (128)</td>
    <td>12</td>
  </tr>
  <tr scope="row">
    <td>Round 3 (64)</td>
    <td>20</td>
  </tr>
  <tr scope="row">
    <td>Round 4 (32)</td>
    <td>28</td>
  </tr>
  <tr scope="row">
    <td>Last 16</td>
    <td>36</td>
  </tr>
  <tr scope="row">
    <td>Quarter Finals</td>
    <td>44</td>
  </tr>
  <tr scope="row">
    <td>Semi Finals</td>
    <td>48</td>
  </tr>
  <tr scope="row">
    <td>Final</td>
    <td>51</td>
  </tr>
</table>
<br>
<form action="" method="get">
  <label for="week_number">Select Week Number:</label>
  <select name="week_number" id="week_number">
    <% @weeks.each do |week_number| %>
      <option value="<%= week_number %>"><%= week_number %></option>
    <% end %>
  </select>
  <button type="submit" class="btn btn-primary btn-sm">Submit</button>
</form>

<h3>Week <%= params[:week_number]%></h3>

