<table class="table table-hover align-middle">
  <tr>
    <th colspan="5" scope="col"><h5>Top Players by Goals</h5><th>
  </tr>
  <tr>
    <th scope="col">id</th>
    <th scope="col">Name</th>
    <th scope="col">Club</th>
    <th scope="col">Position</th>
    <th scope="col">Goals</th>
  </tr>
  <% @top_goals.each do |player| %>
    <tr scope="row">
      <td><%= player[:id] %></td>
      <td><%= player[:name] %></td>
      <td><%= player[:club] %></td>
      <td><%= player[:position] %></td>
      <td><%= player[:goals] %></td>
    </tr>
  <% end %>
</table>