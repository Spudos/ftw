<div class="col-md-4">
  <table class="table table-hover">
    <tr>
      <th colspan="5" scope="col"><h5>ATTL by Skill</h5><th>
    </tr>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Club</th>
      <th scope="col">Skill</th>
    </tr>
    <% @top_total_skill.select { |player| player[:position] == 'ATTL' }.take(10).each do |player| %>
      <tr scope="row">
        <td><%= player[:id] %></td>
        <td><%= player[:name] %></td>
        <td><%= player[:club] %></td>
        <td><%= player[:total_skill] %></td>
      </tr>
    <% end %>
  </table>
</div>

