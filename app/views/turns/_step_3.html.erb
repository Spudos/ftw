    </tr>
    <tr>
      <td>Ligue 2</td>
      <td><%= @games_completed["Ligue 2"] %>/<%= @games_scheduled["Ligue 2"] %></td>
    </tr>
    <tr>
      <td>Serie A</td>
      <td><%= @games_completed["Serie A"] %>/<%= @games_scheduled["Serie A"] %></td>
    </tr>
    <tr>
      <td>Serie B</td>
      <td><%= @games_completed["Serie B"] %>/<%= @games_scheduled["Serie B"] %></td>
    </tr>
    <tr>
