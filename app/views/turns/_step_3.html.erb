<div class="col-3">
  <h3>Step 3</h3>
  <h6>Auto Selections and Matches</h6>
  <form action="/turns/process_matches" method="post">
    <input type="hidden" name="selected_week" value="<%= params[:week] %>">
    <% if @turn && @turn.auto_selections && @turn.run_matches %>
      <button type="submit" class="btn btn-danger disabled">Selections and matches job processed</button><br>
    <% else %>
      <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to run all selections and games?')">All Selections and Games</button><br>
    <% end %>
  </form>

  <table class="table table-striped">
    <tr>
      <td>Auto Selections</td>
      <td><%= @turn.auto_selections %></td>
    </tr>
