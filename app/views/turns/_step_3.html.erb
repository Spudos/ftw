      <td><%= @games_completed["Premier League"] %>/<%= @games_scheduled["Premier League"] %></td>
    </tr>
    <tr>
      <td>Championship</td>
      <td><%= @games_completed["Championship"] %>/<%= @games_scheduled["Championship"] %></td>
    </tr>
