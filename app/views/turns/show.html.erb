
<h2>New Turn action</h2>
<div id="turns">
  <table class="table table-hover align-middle">
    <tbody>
      <tr>
        <th scope="col">Week</th>
        <th scope="col">Club</th>
        <th scope="col">var1</th>
        <th scope="col">var2</th>
        <th scope="col">var3</th>
        <th scope="col">Action</th>
        <th scope="col">Date Processed</th>
      </tr>
      <tr scope="row">
        <%= render @turn %>
      </tr>
    </tbody>
  </table>
</div>
<div>
  <%= link_to "Back to actions", turns_path, class: "btn btn-sm btn-primary" %> 
  <%= button_to "Destroy this action", @turn, method: :delete, class: "btn btn-sm btn-danger" %>
</div>
