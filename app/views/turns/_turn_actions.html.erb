<div class="container">
  <div class="row">
    <div class="col-10">
      <h3 class="text-center mb-5">Turn Actions</h3>
      <%= link_to "Click here a create a new turn action", new_turn_path, class: "btn btn-sm btn-primary" %>
      <div id="turns">
        <table class="table table-hover align-middle">
          <tbody>
            <tr>
              <th scope="col">Week</th>
              <th scope="col">Club</th>
              <th scope="col">var1</th>
              <th scope="col">var2</th>
              <th scope="col">var3</th>
              <th scope="col">var4</th>
              <th scope="col">Action</th>
              <th scope="col">Date Processed</th>
            </tr>
            <% @turn_actions.each do |turn| %>
             <tr scope="row">   
                <% if turn.week.to_s == params[:week] %>
                  <td><%= turn.week %></td>
                  <td><%= turn.club_id %></td>
                  <td><%= turn.var1 %></td>
                  <td><%= turn.var2 %></td>
                  <td><%= turn.var3 %></td>
                  <td><%= turn.var4 %></td>
                  <td>
                    <% if turn.date_completed.nil? %>
                      <%= link_to "Edit", edit_turn_path(turn.id), class: "btn btn-sm btn-primary" %>
                    <% else %>
                      Processed
                    <% end %>
                  </td>
                  <td><%= turn.date_completed %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
