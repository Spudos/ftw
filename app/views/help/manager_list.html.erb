<div class="text-center">
  <% if @waiting_list %>
    <h2>Manager Waiting List</h2>
  <% else %>
    <h2>Current Manager Listing</h2>
  <% end %>
</div>

<table class="table table-hover align-middle">
  <tr class="table-header">
    <th scope="col">Name</th>
    <th scope="col">Surname</th>
    <% unless @waiting_list %>
      <th scope="col">Club Id</th>
      <th scope="col">Club Name</th>
      <th scope="col">League</th>
      <th scope="col">Appointed</th>
    <% end %>
  </tr>

  <% @managers.each do |manager| %>
    <tr scope="row">
      <td><%= manager[:fname] %></td>
      <td><%= manager[:lname] %></td>
      <% unless @waiting_list %>
        <td><%= manager[:club] %></td>
        <td><%= Club.find_by(id: manager[:club])&.name %></td>
        <td><%= Club.find_by(id: manager[:club])&.league %></td>
        <td><%= manager[:appointed] %></td>
      <% end %>
    </tr>
  <% end %>
</table>