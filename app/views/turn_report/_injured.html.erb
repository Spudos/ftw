<div>
  <h3 class="text-center">This Weeks Injuries</h3>
  <div class="row mb-5">
    <div class="d-flex flex-column align-items-center">
    <% if @injured.present? %>
      <table class="table table-hover align-middle">
        <tbody>
          <tr class="small text-center alig7n-middle">
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Club</th>
            <th scope="col">Nat</th>
            <th scope="col">Pos</th>
            <th scope="col">TS</th>
            <th scope="col">Weeks Injured</th>
          </tr>
          <% @injured.each do |player| %>
            <tr scope="row" class="small align-middle">
              <td><%= player[:id] %></td>
              <td><%= player[:name] %></td>
              <td><%= player[:age] %></td>
              <td><%= Club.find_by(id: player[:club_id])&.name %></td>
              <td><%= player[:nationality] %></td>
              <td><%= player[:position] %></td>
              <td><%= player[:total_skill] %></td>
              <td><%= player[:available] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No transfers were completed this week.</p>
    <% end %>
    </div>
  </div>
</div>