<h3>Results</h3>
<table class="table table-hover align-middle">
  <thead>
    <tr>
      <th scope="col">Match ID</th>
      <th scope="col">Competition</th>      
      <th scope="col">Home</th>
      <th scope="col">Away</th>
      <th scope="col">Home possession</th>
      <th scope="col">Away possession</th>
      <th scope="col">Home Goals</th>
      <th scope="col">Away Goals</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |match| %>
      <tr scope="row">
        <td><%= match.id %></td>
        <td><%= match.competition %></td>
        <td><%= Club.find_by(id: match.home_team)&.name %></td>
        <td><%= Club.find_by(id: match.away_team)&.name %></td>
        <td><%= match.home_possession %></td>
        <td><%= match.away_possession %></td>
        <td><%= match.home_goals %></td>
        <td><%= match.away_goals %></td>
      </tr>
    <% end %>
  </tbody>
</table>
