<div class="row d-flex justify-content-center mb-2">
  <h3 class="text-center mb-1">Details for <%= @player.name %></h3>
  <h4 class="text-center mb-1">Plays for <%= Club.find_by(id: @player.club_id)&.name %></h4>
  <h5 class="text-center mb-5">Nationality: <%= @player.nationality %></h5>
</div>

<div class="row d-flex justify-content-center mb-5">
  <%= render 'basic' %>
  <%= render 'loyalty_fitness' %>
</div>

<div class="row d-flex justify-content-center mb-5">
  <%= render 'skills' %>
</div>

<div class="row d-flex justify-content-center mb-5">
  <%= render 'totals' %>
</div>

<div class="row d-flex justify-content-center mb-5">
  <%= render 'performances' %>
</div>

<div>
  <%= link_to "Back", request.referrer, class: "btn btn-sm btn-primary" %>
</div>